{
    "name": "vjik/yii3-advanced",
    "description": "Yii3 Advanced application template",
    "type": "project",
    "license": "BSD-3-Clause",
    "autoload": {
        "psr-4": {
            "App\\Core\\": "core/src",
            "App\\Gateways\\Console\\": "gateways/console/src",
            "App\\Gateways\\Frontend\\": "gateways/frontend/src"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "yiisoft/yii-console": "^2.2",
        "yiisoft/yii-runner-console": "^2.1",
        "yiisoft/config": "^1.5",
        "yiisoft/event-dispatcher": "^1.1",
        "yiisoft/yii-runner-http": "^2.2",
        "httpsoft/http-message": "^1.1",
        "yiisoft/middleware-dispatcher": "^5.2",
        "yiisoft/error-handler": "^3.2",
        "yiisoft/router": "^3.1",
        "yiisoft/router-fastroute": "^3.0",
        "yiisoft/view": "^8.0",
        "yiisoft/yii-view": "^6.0"
    },
    "extra": {
        "config-plugin-file": "config/configuration.php"
    },
    "config": {
        "allow-plugins": {
            "yiisoft/config": true
        }
    }
}
